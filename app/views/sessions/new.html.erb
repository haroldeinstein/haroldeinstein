<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag :login %>
<% end %>

<table cellpadding="0" cellspacing="0" border="0" width="100%" height="100%">
  <tbody>
    <tr>
      <td width="100%" height="100%" valign="middle">
        <div id="login">

          <form action="/sessions" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <label class="dark" for="username"><h4>username</h4></label>
            <input class="dark" type="text" name="username" id="username">
            <br>
            <label class="dark" for="password"><h4>password</h4></label>
            <input class="dark" type="password" name="password" id="password">
            <br>
            <input class="btn neutral" type="submit" value="log in">
          </form>

        </div>
      </td>
    </tr>
  </tbody>
</table>
